<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="40.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="unoeste.termo6.simulador.MainController"
      style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <children>
        <!-- Título -->
        <Label text="Linguagens Formais e Autômatos" textAlignment="CENTER"
               style="-fx-text-fill: white;">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <Label text="Simulador interativo" textAlignment="CENTER"
               style="-fx-text-fill: #ecf0f1;">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <!-- Botões -->
        <HBox alignment="CENTER" spacing="40.0">
            <children>
                <Button text="Expressão Regular" onAction="#onRegex"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 15; -fx-padding: 10 20; -fx-cursor: hand;">
                </Button>

                <Button text="Autômato" onAction="#onAutomato"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 15; -fx-padding: 10 20; -fx-cursor: hand;">
                </Button>

                <Button text="Gramática"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 15; -fx-padding: 10 20; -fx-cursor: hand;">
                </Button>
            </children>
        </HBox>

        <!-- Autores -->
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Autores:" style="-fx-text-fill: #f1c40f;">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                <Label text="- Cauã Pereira Domingues&#10;- João Paulo Saccomani de Freitas Bortolocce&#10;- Matheus Oliveira da Silva&#10;- Victor Hugo Donaire de Oliveira"
                       textAlignment="CENTER" style="-fx-text-fill: #ecf0f1;">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</VBox>
