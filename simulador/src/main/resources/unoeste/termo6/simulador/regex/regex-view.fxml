<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="30.0" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-padding: 30;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.termo6.simulador.regex.RegexController">

    <children>
        <!-- Campo de Expressão Regular -->
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <Label style="-fx-text-fill: #f1c40f; -fx-font-size: 22px; -fx-font-weight: bold;" text="Expressão Regular" />
                <TextField fx:id="tf_expressao" prefHeight="50.0" prefWidth="350.0" promptText="Informe a expressão regular" style="-fx-background-radius: 10; -fx-background-color: #ecf0f1; -fx-font-size: 16px; -fx-padding: 8;" />
            </children>
        </VBox>

        <!-- Campo de Palavra -->
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <Label style="-fx-text-fill: #f1c40f; -fx-font-size: 22px; -fx-font-weight: bold;" text="Teste uma Palavra" />
                <TextField fx:id="tf_palavra" prefHeight="50.0" prefWidth="350.0" promptText="Informe a palavra de teste" style="-fx-background-radius: 10; -fx-background-color: #ecf0f1; -fx-font-size: 16px; -fx-padding: 8;" />
            </children>
        </VBox>

        <!-- Resultado -->
        <Label fx:id="lb_resultado" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Geração de Palavras -->
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <Label style="-fx-text-fill: #1abc9c; -fx-font-size: 20px; -fx-font-weight: bold;" text="10 primeiras palavras desta linguagem" />
                <Label fx:id="lb_palavras" style="-fx-text-fill: #ecf0f1; -fx-font-size: 16px; -fx-font-style: italic;">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font></Label>
            </children>
        </VBox>

        <!-- Botões -->
        <HBox alignment="CENTER" spacing="30.0">
            <children>
                <Button onAction="#onTestar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 15; -fx-padding: 10 20; -fx-cursor: hand;" text="Testar Palavra" />

                <Button onAction="#onGerar" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 15; -fx-padding: 10 20; -fx-cursor: hand;" text="Gerar Palavras" />
            </children>
        </HBox>
    </children>
</VBox>
