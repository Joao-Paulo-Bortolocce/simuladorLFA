<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.termo6.simulador.RegexController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="95.0" prefWidth="318.0" spacing="20.0">
         <children>
            <Label text="Espreçao Regular" />
            <TextField fx:id="tf_expressao" prefHeight="55.0" prefWidth="318.0" promptText="informe a espreçao regular" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="95.0" prefWidth="318.0" spacing="20.0">
         <children>
            <Label text="Teste uma palavra" />
            <TextField fx:id="tf_palavra" prefHeight="55.0" prefWidth="318.0" promptText="informe a palavra de teste" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <Label fx:id="lb_resultado" />
      <VBox alignment="TOP_CENTER" prefHeight="95.0" prefWidth="318.0" spacing="20.0">
         <children>
            <Label text="10 primeiras palabras desta linguagem" />
            <Label fx:id="lb_palavras" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onTestar" text="Testar Palavra" />
            <Button mnemonicParsing="false" onAction="#onGerar" text="Gerar Palavras" />
         </children>
      </HBox>
   </children>
</VBox>
