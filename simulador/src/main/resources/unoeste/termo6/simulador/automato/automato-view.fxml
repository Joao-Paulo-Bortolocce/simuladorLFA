<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.termo6.simulador.automato.AutomatoController">
    <top>
        <ToolBar style="-fx-background-color: #2c3e50;">
            <items>
                <Label text="Tipo de Estado: " style="-fx-text-fill: #f1c40f; -fx-font-size: 18">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Label>
                <ToggleButton fx:id="bt_estado" text="Normal"
                              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 15; -fx-cursor: hand;
                                     -fx-border-color: transparent; -fx-border-width: 2px; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                              onMouseEntered="#onToggleButtonHover" onMouseExited="#onToggleButtonExit" />
                <ToggleButton fx:id="bt_inicial" text="Inicial"
                              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 15; -fx-cursor: hand;
                                     -fx-border-color: transparent; -fx-border-width: 2px; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                              onMouseEntered="#onToggleButtonHover" onMouseExited="#onToggleButtonExit" />
                <ToggleButton fx:id="bt_inicial_final" text="Inicial e Final"
                              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 15; -fx-cursor: hand;
                                     -fx-border-color: transparent; -fx-border-width: 2px; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                              onMouseEntered="#onToggleButtonHover" onMouseExited="#onToggleButtonExit" />
                <ToggleButton fx:id="bt_final" text="Final"
                              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 15; -fx-cursor: hand;
                                     -fx-border-color: transparent; -fx-border-width: 2px; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                              onMouseEntered="#onToggleButtonHover" onMouseExited="#onToggleButtonExit" />

                <Separator orientation="VERTICAL" prefHeight="100.0" prefWidth="0.0">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Separator>

                <ToggleButton fx:id="bt_ligar" text="Criar Ligação"
                              style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 8 15; -fx-cursor: hand;
                                     -fx-border-color: transparent; -fx-border-width: 2px; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                              onMouseEntered="#onToggleButtonHover" onMouseExited="#onToggleButtonExit" />
            </items>
        </ToolBar>
    </top>
    <center>
        <Pane fx:id="painel_automato" onMouseClicked="#manipularClickPainel"
              style="-fx-background-color: #f8f8f8;" />
    </center>
</BorderPane>